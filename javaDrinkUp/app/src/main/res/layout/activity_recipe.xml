<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_message"
        android:hint="Sök på en dryck eller på ingridienser" />

    <com.cengalabs.flatui.views.FlatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sök"
        android:id="@+id/search"
        flatui:fl_theme="@array/sky"
        android:layout_gravity="right"
        flatui:fl_touchEffect="fl_ripple"
        flatui:fl_blockButtonEffectHeight="3dp"
        android:onClick="sendMessage"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        >
        <com.cengalabs.flatui.views.FlatButton
            android:layout_margin="5dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Drinkar"
            android:id="@+id/drinks"
            flatui:fl_theme="@array/sky"
            flatui:fl_touchEffect="fl_ripple"
            flatui:fl_blockButtonEffectHeight="3dp"

            android:onClick = "startDrinks"
            />
        <com.cengalabs.flatui.views.FlatButton
            android:layout_margin="5dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Öl"
            android:id="@+id/beer"
            android:drawableLeft="@drawable/ic_launcher"
            flatui:fl_theme="@array/sky"
            flatui:fl_touchEffect="fl_ripple"
            flatui:fl_blockButtonEffectHeight="3dp"

            android:onClick = "startBeer"
            />
        <com.cengalabs.flatui.views.FlatButton
            android:layout_margin="5dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Alkoläsk"
            android:id="@+id/RTD"
            flatui:fl_theme="@array/sky"
            flatui:fl_touchEffect="fl_ripple"
            flatui:fl_blockButtonEffectHeight="3dp"

            android:onClick = "startAlksoda"
            />
        <com.cengalabs.flatui.views.FlatButton
            android:layout_margin="5dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Cider"
            android:id="@+id/cider"
            flatui:fl_theme="@array/sky"
            flatui:fl_touchEffect="fl_ripple"
            flatui:fl_blockButtonEffectHeight="3dp"

            android:onClick = "startCider"
            />
        <com.cengalabs.flatui.views.FlatButton
            android:layout_margin="5dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Vin"
            android:id="@+id/wine"
            flatui:fl_theme="@array/sky"
            flatui:fl_touchEffect="fl_ripple"
            flatui:fl_blockButtonEffectHeight="3dp"

            android:onClick = "startWine"
            />
        <com.cengalabs.flatui.views.FlatButton
            android:layout_margin="5dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Övrigt"
            android:id="@+id/Other"
            flatui:fl_theme="@array/sky"
            flatui:fl_touchEffect="fl_ripple"
            flatui:fl_blockButtonEffectHeight="3dp"

            android:onClick = "startOther"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/ic_launcher" />


    </LinearLayout>

</LinearLayout>
