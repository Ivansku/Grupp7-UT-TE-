<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroundall"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".RecipeActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_message"
        android:hint="Sök på en dryck eller på ingridienser" />

    <com.cengalabs.flatui.views.FlatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sök"
        android:id="@+id/search"
        flatui:fl_theme="@array/sky"
        android:layout_gravity="end"
        flatui:fl_touchEffect="fl_ripple"
        flatui:fl_blockButtonEffectHeight="3dp"
        android:onClick="sendMessage"
        />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >
        <com.cengalabs.flatui.views.FlatButton
            android:layout_margin="5dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Drinkar"
            android:id="@+id/drinks"
            flatui:fl_theme="@array/sky"
            flatui:fl_touchEffect="fl_ripple"
            flatui:fl_blockButtonEffectHeight="3dp"
            android:onClick = "startDrinks"
            />
        <com.cengalabs.flatui.views.FlatButton
            android:layout_margin="5dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Öl"
            android:id="@+id/beer"
            flatui:fl_theme="@array/sky"
            flatui:fl_touchEffect="fl_ripple"
            flatui:fl_blockButtonEffectHeight="3dp"
            android:onClick = "startBeer"
            />
        <com.cengalabs.flatui.views.FlatButton
            android:layout_margin="5dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Alkoläsk"
            android:id="@+id/RTD"
            flatui:fl_theme="@array/sky"
            flatui:fl_touchEffect="fl_ripple"
            flatui:fl_blockButtonEffectHeight="3dp"
            android:onClick = "startAlkosoda"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            />

        <com.cengalabs.flatui.views.FlatButton
            android:layout_margin="5dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Vin"
            android:id="@+id/wine"
            flatui:fl_theme="@array/sky"
            flatui:fl_touchEffect="fl_ripple"
            flatui:fl_blockButtonEffectHeight="3dp"
            android:onClick = "startWine"
            />
        <com.cengalabs.flatui.views.FlatButton
            android:layout_margin="5dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Övrigt"
            android:id="@+id/Other"
            flatui:fl_theme="@array/sky"
            flatui:fl_touchEffect="fl_ripple"
            flatui:fl_blockButtonEffectHeight="3dp"
            android:onClick = "startOther"
            />

        </LinearLayout>
</ScrollView>

</LinearLayout>
